@model IEnumerable<Product>

  <div class="test-center">
    <div class="display-6">Product Page</div>

    <hr />
    <div class="d-flex justify-content-end my-3">
      <a asp-action="Create" class="btn btn-outline-success">
        <i class="fa fa-plus"></i>
        Create Product
      </a>
    </div>
    

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var product in Model)
        {
          <tr>
            <td>@product.ProductId</td>
            <td>@product.ProductName</td>
            <td>Product Description</td>
            <td>@product.Price</td>
            <td>
              <div class="btn-group">
                <a asp-action="Update" asp-route-id="@product.ProductId" class="btn btn-warning">
                  <i class="fa fa-edit"></i>
                  Update
                </a>
                <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger">
                  <i class="fa fa-trash"></i>
                  Delete
                </a>
                <a asp-action="GetProduct" asp-area="" asp-asp-controller="Product"  asp-route-id="@product.ProductId" class="btn btn-info">
                  <i class="fa fa-search"></i>
                  Go to Product
                </a>
            </td>
          </tr>
        }
    </table>
  </div>
  

