
@section Footer{
  <div>
    Only render in index page
  </div>
}

@model List<Product>

      @foreach (var product in Model)
      {
        <div>
          <h2>@product.ProductName</h2>
          <p>@product.Price</p>
          <p>
            <a href="@Url.Action("GetProduct", "Product", new { id = product.ProductId })">View</a>
          </p>
        </div>
      }
