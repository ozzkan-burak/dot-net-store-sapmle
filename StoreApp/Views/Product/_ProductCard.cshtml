@model Product
<div class="col-md-4 my-3">
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="/images/default.webp" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">@Model.ProductName</h5>
        <p>@Model.Price.ToString("c")</p>
        <a asp-action="GetProduct" asp-route-id="@Model.ProductId" class="btn btn-primary">
        <i class="fa-solid fa-arrow-right"></i> Add to cart</a>
        Go somewhere</a>
    </div>
  </div>
</div>